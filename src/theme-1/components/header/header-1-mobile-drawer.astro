<script>
  $(window).on("load", function () {
    // Get the drawer element
    const drawer = document.querySelector(".mobile-drawer");

    // Set placement based on document direction
    if (drawer) {
      const isRTL = document.documentElement.dir === "rtl" || document.body.dir === "rtl";
      // In LTR: slide from right (end), In RTL: slide from left (end in RTL context means right)
      drawer.placement = isRTL ? "start" : "end";
      drawer.classList.remove("hidden");
    }

    // Show the drawer once it exists

    if (drawer) {
      drawer.style.display = "";
    }

    // Function to open the drawer
    window.openMobileDrawer = () => {
      if (drawer) {
        drawer.show();
      }
    };

    // Function to close the drawer
    window.closeMobileDrawer = () => {
      if (drawer) {
        drawer.hide();
      }
    };

    // Close drawer when clicking on menu items
    const menuItems = document.querySelectorAll(".mobile-menu-item");
    menuItems.forEach((item) => {
      item.addEventListener("click", () => {
        if (drawer) {
          drawer.hide();
        }
      });
    });
  });
</script>
