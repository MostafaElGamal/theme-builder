---
import ProductCard3 from "../components/common/product-card-3.astro";
---

<section class='best sells'>
  <div class='container container-lg'>
    <div class='section-heading'>
      <div class='flex-between flex-wrap gap-8'>
        <h5
          class='mb-0'
          data-aos='fade-right'
        >
          Daily Best Sells
        </h5>
      </div>
    </div>

    <div class='row g-12'>
      <div
        class='custom-2xl:w-8/12 flex-grow-0 flex-shrink-0 basis-auto'
        data-aos='fade-right'
        data-aos-delay='100'
      >
        <div class='row g-4'>
          <ProductCard3 />
          <ProductCard3 />
          <ProductCard3 />
          <ProductCard3 />
        </div>
      </div>

      <div
        class='custom-2xl:w-4/12 flex-grow-0 flex-shrink-0 basis-auto'
        data-aos='fade-left'
        data-aos-delay='100'
      >
        <div class='relative rounded-16 bg-light-purple overflow-hidden p-28 z-[1] text-center'>
          <div class=''>
            <img
              src='https://wowtheme7.com/tailwind/marketpro/images/special-snacks.png'
              alt='Image'
              class='absolute inset-block-start-0 inset-inline-start-0 z-[-1] w-full h-full cover-img'
            />

            <div class='custom-2xl:block hidden'>
              <img
                src='https://wowtheme7.com/tailwind/marketpro/images/special-snacks-img.png'
                alt='Image'
              />
            </div>
          </div>
          <div class='2xl:py-[1.5rem]'>
            <h4 class='mb-8'>Special Snacks</h4>
            <div
              class='countdown my-32'
              id='countdown5'
            >
              <ul class='countdown-list style-two flex items-center justify-center flex-wrap'>
                <li
                  class='countdown-list__item text-heading flex items-center gap-4 text-sm font-[500] colon-white'
                >
                  <span class='days'></span>Days
                </li>
                <li
                  class='countdown-list__item text-heading flex items-center gap-4 text-sm font-[500] colon-white'
                >
                  <span class='hours'></span>Hours
                </li>
                <li
                  class='countdown-list__item text-heading flex items-center gap-4 text-sm font-[500] colon-white'
                >
                  <span class='minutes'></span>Min
                </li>
                <li
                  class='countdown-list__item text-heading flex items-center gap-4 text-sm font-[500] colon-white'
                >
                  <span class='seconds'></span>Sec
                </li>
              </ul>
            </div>
            <a
              class='mt-16 btn btn-main-two font-[500] inline-flex items-center rounded-[50rem] gap-8'
              tabindex='0'
            >
              Shop Now
              <span class='icon text-xl flex'><i class='ph ph-arrow-right'></i></span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
