<div class='brand overflow-hidden'>
  <div class='container container-lg'>
    <div
      class='brand-inner bg-primary-500/20 p-24 rounded-16'
      data-aos='fade-up'
    >
      <div class='section-heading'>
        <div class='flex-between flex-wrap gap-8'>
          <h5
            class='mb-0'
            data-aos='fade-right'
          >
            Shop by Brands
          </h5>
          <div
            class='flex items-center gap-16'
            data-aos='fade-left'
          >
            <a
              href='shop.html'
              class='text-sm font-[500] text-gray-700 hover-text-main-600 hover-text-decoration-underline'
            >
              View All Deals
            </a>
            <div class='flex items-center gap-8'>
              <button
                type='button'
                id='brand-prev'
                class='slick-prev slick-arrow text-neutral-500'
              >
                <i class='ph ph-caret-left'></i>
              </button>
              <button
                type='button'
                id='brand-next'
                class='slick-next slick-arrow text-neutral-500'
              >
                <i class='ph ph-caret-right'></i>
              </button>
            </div>
          </div>
        </div>
      </div>

      <div class='brand-slider arrow-style-two'>
        {
          Array.from({ length: 15 }).map(() => (
            <div class='brand-item'>
              <img
                src='https://wowtheme7.com/tailwind/marketpro/images/brand-img3.png'
                alt='Image'
              />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>

<script>
  $(".brand-slider").slick({
    slidesToShow: 8,
    slidesToScroll: 1,
    autoplay: true,
    autoplaySpeed: 2000,
    speed: 900,
    dots: false,
    pauseOnHover: true,
    arrows: true,
    draggable: true,
    rtl: $("html").attr("dir") === "rtl",
    infinite: true,
    nextArrow: "#brand-next",
    prevArrow: "#brand-prev",
    responsive: [
      {
        breakpoint: 1599,
        settings: { slidesToShow: 7, arrows: false },
      },
      {
        breakpoint: 1399,
        settings: { slidesToShow: 6, arrows: false },
      },
      {
        breakpoint: 992,
        settings: { slidesToShow: 5, arrows: false },
      },
      {
        breakpoint: 575,
        settings: { slidesToShow: 4, arrows: false },
      },
      {
        breakpoint: 424,
        settings: { slidesToShow: 3, arrows: false },
      },
      {
        breakpoint: 359,
        settings: { slidesToShow: 2, arrows: false },
      },
    ],
  });
</script>
