<!-- Video Modal Dialog -->
<sl-dialog
  id='video-modal'
  class='reels-video-dialog'
>
  <div class='relative w-full h-full flex items-center justify-center'>
    <video
      id='modal-video'
      class='w-auto h-auto max-w-full max-h-full rounded-16'
      controls
      autoplay
    >
    </video>
  </div>
</sl-dialog>

<script>
  $(document).ready(function () {
    $(".reels-slider").slick({
      slidesToShow: 5,
      slidesToScroll: 1,
      autoplay: true,
      autoplaySpeed: 3000,
      speed: 900,
      dots: false,
      pauseOnHover: true,
      arrows: true,
      draggable: true,
      rtl: $("html").attr("dir") === "rtl",
      infinite: true,
      nextArrow: "#reels-next",
      prevArrow: "#reels-prev",
      responsive: [
        {
          breakpoint: 1399,
          settings: { slidesToShow: 5, arrows: false },
        },
        {
          breakpoint: 1199,
          settings: { slidesToShow: 3, arrows: false },
        },
        {
          breakpoint: 992,
          settings: { slidesToShow: 3, arrows: false },
        },
        {
          breakpoint: 768,
          settings: { slidesToShow: 2, arrows: false },
        },
        {
          breakpoint: 575,
          settings: { slidesToShow: 1, arrows: false },
        },
      ],
    });

    // Video dialog functionality with Shoelace
    const modal = document.getElementById("video-modal");
    const modalVideo = document.getElementById("modal-video");
    const reelVideos = document.querySelectorAll(".reel-video");

    // Open dialog when clicking on any reel video
    reelVideos.forEach((video) => {
      video.addEventListener("click", function (e) {
        e.stopPropagation();
        const videoSrc = this.getAttribute("data-video-src");
        modalVideo.src = videoSrc;
        modal.show();
        modalVideo.play();
      });
    });

    // Prevent body scroll when dialog is open
    modal.addEventListener("sl-show", () => {
      document.body.style.overflow = "hidden";
    });

    // Close dialog and cleanup video
    modal.addEventListener("sl-hide", () => {
      document.body.style.overflow = "";
      modalVideo.pause();
      modalVideo.src = "";
    });
  });
</script>
