<div class='delivery-section'>
  <div class='container container-lg'>
    <div
      class='delivery relative rounded-16 bg-main-600 p-16 flex items-center gap-16 flex-wrap z-[1]'
    >
      <img
        src='https://wowtheme7.com/tailwind/marketpro/images/delivery-bg.png'
        alt='Image'
        class='absolute inset-block-start-0 inset-inline-start-0 z-[-1] w-full h-full'
      />
      <div class='row items-center'>
        <div class='lg:w-3/12 flex-grow-0 flex-shrink-0 basis-auto lg:block hidden'>
          <div class='delivery__man text-center'>
            <img
              src='https://wowtheme7.com/tailwind/marketpro/images/delivery-man.png'
              alt='Image'
            />
          </div>
        </div>
        <div class='lg:w-5/12 flex-grow-0 flex-shrink-0 basis-auto md:w-7/12'>
          <div class='text-center'>
            <h4 class='text-white mb-8'>We Delivery on Next Day from 10:00 AM to 08:00 PM</h4>
            <p
              class='text-white'
              data-aos='zoom-in'
            >
              For Orders starts from $100
            </p>
            <div
              class='flex justify-center gap-6 flex-wrap'
              id='countdown1'
            >
              <div class='flex flex-col items-center gap-2 min-w-[60px]'>
                <span
                  id='countdown-days'
                  class='text-white text-2xl font-bold block leading-none'
                >
                  00
                </span>
                <span class='countdown__label text-white text-sm block uppercase tracking-wider'>
                  Days
                </span>
              </div>
              <div class='flex flex-col items-center gap-2 min-w-[60px]'>
                <span
                  id='countdown-hours'
                  class='text-white text-2xl font-bold block leading-none'
                >
                  00
                </span>
                <span class='countdown__label text-white text-sm block uppercase tracking-wider'>
                  Hours
                </span>
              </div>
              <div class='flex flex-col items-center gap-2 min-w-[60px]'>
                <span
                  id='countdown-mins'
                  class='text-white text-2xl font-bold block leading-none'
                >
                  00
                </span>
                <span class='countdown__label text-white text-sm block uppercase tracking-wider'>
                  Mins
                </span>
              </div>
              <div class='flex flex-col items-center gap-2 min-w-[60px]'>
                <span
                  id='countdown-secs'
                  class='text-white text-2xl font-bold block leading-none'
                >
                  00
                </span>
                <span class='countdown__label text-white text-sm block uppercase tracking-wider'>
                  Secs
                </span>
              </div>
            </div>
            <a
              href='shop.html'
              class='mt-16 btn btn-main-two font-[500] inline-flex items-center rounded-[50rem] gap-8'
              tabindex='0'
            >
              Shop Now
              <span class='icon text-xl flex'><i class='ph ph-arrow-right'></i></span>
            </a>
          </div>
        </div>
        <div class='lg:w-4/12 flex-grow-0 flex-shrink-0 basis-auto md:w-5/12 md:block hidden'>
          <img
            src='https://wowtheme7.com/tailwind/marketpro/images/special-snacks-img.png'
            alt='Image'
          />
        </div>
      </div>
    </div>
  </div>
</div>

<script is:inline>
  function initCountdown() {
    const countdownEl = document.getElementById("countdown1");
    if (!countdownEl) {
      console.log("Countdown element not found");
      return;
    }
    console.log("Initializing countdown");

    // Set countdown end date (24 hours from now as an example)
    const endDate = new Date();
    endDate.setHours(endDate.getHours() + 24);

    const daysEl = document.getElementById("countdown-days");
    const hoursEl = document.getElementById("countdown-hours");
    const minsEl = document.getElementById("countdown-mins");
    const secsEl = document.getElementById("countdown-secs");

    console.log(hoursEl);

    if (!daysEl || !hoursEl || !minsEl || !secsEl) {
      console.log("Countdown elements not found");
      return;
    }

    function updateCountdown() {
      const now = new Date().getTime();
      const distance = endDate.getTime() - now;

      if (distance < 0) {
        clearInterval(interval);
        daysEl.textContent = "0";
        hoursEl.textContent = "0";
        minsEl.textContent = "0";
        secsEl.textContent = "0";
        return;
      }

      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      daysEl.textContent = String(days).padStart(2, "0");
      hoursEl.textContent = String(hours).padStart(2, "0");
      minsEl.textContent = String(minutes).padStart(2, "0");
      secsEl.textContent = String(seconds).padStart(2, "0");
    }

    updateCountdown();
    const interval = setInterval(updateCountdown, 1000);
  }

  // Initialize countdown when DOM is ready
  (function () {
    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", initCountdown);
    } else {
      initCountdown();
    }
  })();
</script>
