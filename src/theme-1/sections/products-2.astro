---
import ProductCard2 from "../components/common/product-card-2.astro";
---

<section class='hot-deals overflow-hidden'>
  <div class='container container-lg'>
    <div class='section-heading'>
      <div class='flex-between flex-wrap gap-8'>
        <h5 class='mb-0 wow bounceInLeft'>Hot Deals Todays</h5>
        <div class='flex items-center gap-16 wow bounceInRight'>
          <a
            href='shop.html'
            class='text-sm font-[500] text-gray-700 hover-text-main-600 hover-text-decoration-underline'
          >
            View All Deals
          </a>
          <div class='flex items-center gap-8'>
            <button
              type='button'
              id='deals-prev'
              class='slick-prev slick-arrow'
            >
              <i class='ph ph-caret-left'></i>
            </button>
            <button
              type='button'
              id='deals-next'
              class='slick-next slick-arrow'
            >
              <i class='ph ph-caret-right'></i>
            </button>
          </div>
        </div>
      </div>
    </div>
    <div class='row g-12'>
      <div class='lg:w-4/12 flex-grow-0 flex-shrink-0 basis-auto'>
        <div
          class='hot-deals relative rounded-16 bg-main-600 overflow-hidden p-28 z-[1] text-center'
        >
          <img
            src='/theme-1/images/offer-shape.png'
            alt='Image'
            class='absolute inset-block-start-0 inset-inline-start-0 z-[-1] w-full h-full opacity-6'
          />
          <div class='hot-deals__thumb'>
            <img
              src='https://wowtheme7.com/tailwind/marketpro/images/hot-deals-img.png'
              alt='Image'
            />
          </div>
          <div class='2xl:py-[1.5rem]'>
            <h4 class='text-white mb-8'>Fresh Vegetables</h4>
            <a
              href='shop.html'
              class='mt-16 btn btn-main-two font-[500] inline-flex items-center rounded-[50rem] gap-8'
              tabindex='0'
            >
              Shop Now
              <span class='icon text-xl flex'><i class='ph ph-arrow-right'></i></span>
            </a>
          </div>
        </div>
      </div>

      <div class='lg:w-8/12 flex-grow-0 flex-shrink-0 basis-auto'>
        <div class='hot-deals-slider arrow-style-two'>
          <ProductCard2 />
          <ProductCard2 />
          <ProductCard2 />
          <ProductCard2 />
          <ProductCard2 />
          <ProductCard2 />
          <ProductCard2 />
          <ProductCard2 />
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  $(document).ready(function () {
    $(".hot-deals-slider").slick({
      slidesToShow: 4,
      slidesToScroll: 1,
      autoplay: true,
      autoplaySpeed: 2000,
      speed: 900,
      dots: false,
      pauseOnHover: true,
      arrows: true,
      draggable: true,
      rtl: $("html").attr("dir") === "rtl",
      infinite: true,
      nextArrow: "#deals-next",
      prevArrow: "#deals-prev",
      responsive: [
        {
          breakpoint: 1399,
          settings: { slidesToShow: 3, arrows: false },
        },
        {
          breakpoint: 1199,
          settings: { slidesToShow: 2, arrows: false },
        },
        {
          breakpoint: 575,
          settings: { slidesToShow: 1, arrows: false },
        },
      ],
    });
  });
</script>
